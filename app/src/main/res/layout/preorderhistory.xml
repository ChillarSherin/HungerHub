<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardid1"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bordergray"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/one"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                >
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="100dp"
                       android:layout_height="wrap_content"
                       android:text="@string/meal"
                       android:id="@+id/itemname"
                       />
                    <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=""
                        android:gravity="center|left"
                        android:textColor="@color/dark_grey1"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/itemname"
                        android:id="@+id/itemnameid"
                       />

               </RelativeLayout> <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                   <TextView
                       android:layout_width="100dp"
                       android:layout_height="wrap_content"
                       android:text="@string/billnumber"
                       android:id="@+id/billnumber"
                       android:textAllCaps="true"
                       />
                    <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=""
                        android:gravity="center|left"
                        android:textColor="@color/dark_grey1"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/billnumber"
                        android:id="@+id/billnumberid"
                       />

               </RelativeLayout> <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                   <TextView
                       android:layout_width="100dp"
                       android:layout_height="wrap_content"
                       android:text="@string/total_"
                       android:id="@+id/total"
                       />
                    <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=""
                        android:gravity="center|left"
                        android:textColor="@color/dark_grey1"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/total"
                        android:id="@+id/totalid"
                       />

               </RelativeLayout> <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                   <TextView
                       android:layout_width="100dp"
                       android:layout_height="wrap_content"
                       android:text="@string/date"
                       android:id="@+id/transid"
                       />
                    <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=""
                        android:gravity="center|left"
                        android:textColor="@color/dark_grey1"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/transid"
                        android:id="@+id/dateid"
                       />

               </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>