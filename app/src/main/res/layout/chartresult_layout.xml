<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/Layoutmsg"
        android:background="@color/white"

        >

        <RelativeLayout
            android:id="@+id/Icon"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:src="@mipmap/ic_exam"
                android:layout_marginLeft="20dp"
                android:contentDescription="Book"
                />



        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Icon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/subject_title"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:id="@+id/subjectname"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/txtgrey"
                    android:layout_toRightOf="@+id/subjectname"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/viewid"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/loadings"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/viewid"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/mark"
                    />



            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/txtgrey"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</LinearLayout>








